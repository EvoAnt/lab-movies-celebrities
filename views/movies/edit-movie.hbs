<h2>Edit Movie</h2>

<form action="/movies/{{_id}}" method="post">
    <label for="title">Title</label>
    <input id="title" type="text" name="title" value="{{title}}">

    <label for="genre">Genre</label>
    <input id="genre" type="text" name="genre" value="{{genre}}">

    <label for="plot">Plot</label>
    <input id="plot" type="text" name="plot" value="{{plot}}">

    <label for="celebrity-select"> Cast:
        <select name="cast" multiple>
            <option disable selected value="{{cast}}"></option>
            {{#each celebrities}}
            <option value="{{_id}}"> {{name}} </option>
            {{/each}}
        </select>
    </label>

    <button type="submit">Save Changes</button>
</form>